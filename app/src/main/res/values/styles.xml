<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.ExpandableListView" parent="Base.Widget.AppCompat.ListView">
        <item name="android:groupIndicator">@null</item>
        <item name="android:indicatorLeft">?android:attr/expandableListPreferredItemIndicatorLeft
        </item>
        <item name="android:indicatorRight">
            ?android:attr/expandableListPreferredItemIndicatorRight
        </item>
        <item name="android:childDivider">@android:drawable/divider_horizontal_dark</item>
    </style>

    <style name="Widget.ExpandableListView.White">
        <item name="android:childDivider">@android:drawable/divider_horizontal_dark</item>
    </style>

</resources>
