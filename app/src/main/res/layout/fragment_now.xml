<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".travel.views.NowFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/closest_stop"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="19"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:focusable="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="LillhersbyvÃ¤gen"
                />
            <TextView
                style="@style/TextAppearance.AppCompat.Display3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="180 meter"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_star_border"
                android:tint="@color/colorAccent"
                android:clickable="true"
                android:foregroundGravity="right"
                android:contentDescription="@string/toggle_favorite"
                android:focusable="true" />

        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/now_departures_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        style="@style/Widget.ExpandableListView"
        android:background="@color/cardview_light_background" />

</LinearLayout>
